<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <data>
        <variable
            name="video"
            type="com.horseracingtips.data.db.entity.HorseVideo" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            >

            <RelativeLayout
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/item_horse_image"
                    android:layout_width="145dp"
                    android:layout_height="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/horse_one" />


                <LinearLayout
                    android:id="@+id/linear_left"
                    android:layout_width="145dp"
                    android:layout_height="100dp"
                    android:layout_alignBottom="@+id/item_horse_image"
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:background="@drawable/text_gradient_shade"
                    >

                    <TextView
                        android:id="@+id/item_horse_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/linear_left"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="10dp"
                        android:text="UK how"
                        android:textColor="@color/light_blue_A200"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_horse_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignTop="@+id/linear_left"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_light"
                        android:lineSpacingMultiplier="0.8"
                        android:text="Don't miss the exciting event this weekend"
                        android:textColor="#C8C8C8"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>